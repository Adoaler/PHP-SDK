{
    "name": "adoaler/sdk",
    "description": "Adoaler SDK for PHP - Ads, OAuth, Auth & More",
    "version": "2.0.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Adoaler",
            "email": "dev@adoaler.com",
            "homepage": "https://adoaler.com"
        }
    ],
    "homepage": "https://developers.adoaler.com/sdks/php",
    "support": {
        "issues": "https://github.com/adoaler/php-sdk/issues",
        "source": "https://github.com/adoaler/php-sdk"
    },
    "keywords": [
        "adoaler",
        "sdk",
        "oauth",
        "ads",
        "authentication",
        "api"
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Adoaler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adoaler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
